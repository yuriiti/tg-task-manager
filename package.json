{
  "name": "task-manager",
  "version": "1.0.0",
  "private": true,
  "description": "Task Manager monorepo with NestJS backend and React frontend",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@task-manager/web",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@turbo/gen": "^2.0.0",
    "turbo": "^2.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
